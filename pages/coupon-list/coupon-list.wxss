/* pages/coupon-list/coupon-list.wxss */

.info {
  padding: 20rpx;
  width: 100%;
}

.info .info-content {
  width: 100%;
  position: relative;
  margin-bottom: 20rpx;
}

.info-content image {
  width: 100%;
  height: 260rpx;
}

.info-content .content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content .content-body {
  width: 100%;
  height: 154rpx;
  position: relative;
}

.content .content-body .btn{
  position: absolute;
  right: 24rpx;
  height: 60rpx;
  color: #fff;
  padding: 10rpx 0;
  border-radius: 10rpx;
  width:180rpx;
  top:50rpx;
}

.content .content-body .price_1{
  margin-left: 24rpx;
  line-height: 0.8;
}
.sub{
  background-color: #ff7b33;
}

.content .content-footer {
  width: 100%;
  height: 50rpx;
  position: relative;
}

.content .content-footer text {
  font-size: 9pt;
  position: absolute;
  right: 24rpx;
}
